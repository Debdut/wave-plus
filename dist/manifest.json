{
  "manifest_version": 3,

  "name": "Wave Plus",
  "description": "Medical Add-ons to Wave",
  "version": "3.0",
  "icons": {
    "256": "icon/256.png",
    "128": "icon/128.png",
    "32": "icon/32.png",
    "16": "icon/16.png"
  },
  
  "action": {
    "default_icon": "icon/16.png",
    "default_popup": "popup/index.html",
    "default_title": "Wave Plus"
  },
  "content_scripts": [
    {
      "matches": ["https://*.waveapps.com/*"],
      "js": ["content/inject.js"]
    }
  ],

  "web_accessible_resources": [{
    "resources": [
      "vendor/*",
      "inject/*",
      "img/*"
    ],
    "matches": ["https://*.waveapps.com/*"]
  }],

  "permissions": []

}